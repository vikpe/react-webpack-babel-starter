{
    "$schema": "http://json-schema.org/schema#",
    "title": "Track list placement",
    "description": "A MWF track list placement component's schema definition.",
    "type": "object",
    "id": "http://www.getmwf.com/releases/core/schemas/components/track-list-placement.json",
    "required": [
        "config",
        "content"
    ],
    "properties": {
        "config": {
            "type": "object",
            "properties": {
                "context": {
                    "type": "string",
                    "enum": [
                        "song"
                    ]
                },
                "size": {
                    "type": "string",
                    "enum": [
                        "small"
                    ]
                },
                "explicit": {
                    "type": "boolean"
                }
            },
            "required": [
                "context",
                "size"
            ]
        },
        "content": {
            "type": "object",
            "properties": {
                "song": {
                    "$ref": "http://www.getmwf.com/releases/core/schemas/components/heading.json"
                },
                "artist": {
                    "type": "object",
                    "properties": {
                        "content": {
                            "type": "object",
                            "properties": {
                                "text": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "album": {
                    "type": "object",
                    "properties": {
                        "content": {
                            "type": "object",
                            "properties": {
                                "text": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "price": {
                    "$ref": "http://www.getmwf.com/releases/core/schemas/components/price.json"
                },
                "featured-image": {
                    "type": "object",
                    "properties": {
                        "vp1": {
                            "type": "string"
                        },
                        "alt": {
                            "type": "string"
                        }
                    }
                },
                "href": {
                    "type": "string"
                }
            }
        }
    }
}