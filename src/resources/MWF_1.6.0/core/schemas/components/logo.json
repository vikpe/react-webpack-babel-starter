{
    "$schema": "http://json-schema.org/schema#",
    "title": "Hero",
    "description": "A MWF logo component's schema definition.",
    "type": "object",
    "id": "http://www.getmwf.com/releases/core/schemas/components/logo.json",
    "properties": {
        "content": {
            "type": "object",
            "properties": {
                "href": {
                    "type": "string"
                },
                "label": {
                    "type": "string"
                },
                "image": {
                    "type": "object",
                    "properties": {
                        "src": {
                            "type": "string"
                        },
                        "alt": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "src",
                        "alt"
                    ]
                },
                "logoType": {
                    "type": "string"
                }
            },
            "required": [
                "logoType"
            ],
            "dependencies": {
                "href": ["label"]
            }
        }
    },
    "required": [
        "content"
    ]
}