{
    "$schema": "http://json-schema.org/schema#",
    "title": "List",
    "description": "A MWF list component's schema definition.",
    "type": "object",
    "id": "http://www.getmwf.com/releases/core/schemas/components/list.json",
    "required": [
        "config",
        "content"
    ],
    "properties": {
        "config": {
            "type": "object",
            "properties": {
                "tag": {
                    "type": "string",
                    "enum": [
                        "ul",
                        "ol"
                    ]
                },
                "bare": {
                    "type": "boolean"
                },
                "lean": {
                    "type": "boolean"
                }
            },
            "required": [
                "tag"
            ]
        },
        "content": {
            "type": "object",
            "properties": {
                "items": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "items"
            ]
        }
    }
}