{
    "$schema": "http://json-schema.org/schema#",
    "title": "Price",
    "description": "A MWF price component's schema definition.",
    "type": "object",
    "id": "http://www.getmwf.com/releases/core/schemas/components/price.json",
    "properties": {
        "config": {
            "type": "object",
            "properties": {
                "currencySymbol": {
                    "type": "string"
                },
                "currencyCode": {
                    "type": "string"
                }
            },
            "required": [
                "currencySymbol",
                "currencyCode"
            ]
        },
        "content": {
            "type": "object",
            "properties": {
                "discountedPrice": {
                    "type": "number"
                },
                "price": {
                    "type": "number"
                }
            },
            "required": [
                "price"
            ]
        }
    },
    "required": [
        "content",
        "config"
    ]
}