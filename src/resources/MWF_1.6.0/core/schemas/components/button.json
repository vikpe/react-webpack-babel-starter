{
    "$schema": "http://json-schema.org/schema#",
    "title": "Button",
    "description": "A MWF button component's schema definition.",
    "type": "object",
    "id": "http://www.getmwf.com/releases/core/schemas/components/button.json",
    "properties": {
        "config": {
            "type": "object",
            "properties": {
                "element-type": {
                    "type": "string",
                    "enum": [
                        "button",
                        "anchor"
                    ]
                }
            },
            "required": [
                "element-type"
            ]
        },
        "content": {
            "type": "object",
            "properties": {
                "text": {
                    "type": "string"
                },
                "href": {
                    "type": "string"
                }
            },
            "required": [
                "text",
                "href"
            ]
        }
    },
    "required": [
        "config",
        "content"
    ]
}