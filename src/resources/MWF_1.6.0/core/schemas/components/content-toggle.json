{
    "$schema": "http://json-schema.org/schema#",
    "title": "Content toggle",
    "description": "A MWF content toggle component's schema definition.",
    "type": "object",
    "id": "http://www.getmwf.com/releases/core/schemas/components/content-toggle.json",
    "properties": {
        "config": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "expanded": {
                    "button-type": "boolean"
                }
            },
            "required": [
                "id",
                "expanded"
            ]
        },
        "content": {
            "type": "object",
            "properties": {
                "text": {
                    "type": "string"
                },
                "more-text": {
                    "type": "string"
                },
                "less-text": {
                    "type": "string"
                }
            },
            "required": [
                "text",
                "more-text",
                "less-text"
            ]
        }
    },
    "required": [
        "config",
        "content"
    ]
}