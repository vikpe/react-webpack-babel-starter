{
    "$schema": "http://json-schema.org/schema#",
    "title": "Rating",
    "description": "A MWF rating component's schema definition.",
    "type": "object",
    "id": "http://www.getmwf.com/releases/core/schemas/components/rating.json",
    "properties": {
        "config": {
            "type": "object",
            "properties": {
                "disabled": {
                    "type": "boolean"
                },
                "readOnly": {
                    "type": "boolean"
                },
                "communityRating": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 5
                },
                "userRating": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 5
                }
            }
        }
    }
}