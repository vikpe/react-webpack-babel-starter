{
    "$schema": "http://json-schema.org/schema#",
    "title": "Sequence indicator",
    "description": "A MWF sequence indicator component's schema definition.",
    "type": "object",
    "id": "http://www.getmwf.com/releases/core/schemas/components/logo.json",
    "properties": {
        "content": {
            "type": "object",
            "properties": {
                "items": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {
                                "$ref": "#/definitions/indicator"
                            },
                            {
                                "$ref": "#/definitions/activeIndicator"
                            }
                        ]
                    }
                }
            },
            "required": [
                "items"
            ]
        }
    },
    "required": [
        "content"
    ],
    "definitions": {
        "indicator": {
            "type": "object",
            "properties": {
                "content": {
                    "type": "object",
                    "properties": {
                        "label": {
                            "type": "string"
                        },
                        "title": {
                            "type": "string"
                        },
                        "id": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "label",
                        "title",
                        "id"
                    ]
                }
            },
            "required": [
                "content"
            ]
        },
        "activeIndicator": {
            "type": "object",
            "oneOf": [
                {
                    "$ref": "#/definitions/indicator"
                }
            ],
            "properties": {
                "config": {
                    "type": "object",
                    "properties": {
                        "checked": {
                            "type": "boolean"
                        }
                    },
                    "required": [
                        "checked"
                    ]
                }
            },
            "required": [
                "config"
            ]
        }
    }
}