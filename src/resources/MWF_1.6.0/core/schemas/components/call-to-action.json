{
    "$schema": "http://json-schema.org/schema#",
    "title": "Call to action",
    "description": "A MWF call-to-action component's schema definition.",
    "type": "object",
    "id": "http://www.getmwf.com/releases/core/schemas/components/call-to-action.json",
    "properties": {
        "config": {
            "type": "object",
            "properties": {
                "secondary": {
                    "type": "boolean"
                },
                "secondary": {
                    "disabled": "boolean"
                }
            }
        },
        "content": {
            "type": "object",
            "properties": {
                "textContent": {
                    "type": "string",
                    "description": "This is the text content for the call to action. Place your call to action content here!"
                },
                "href": {
                    "type": "string"
                }
            },
            "required": [
                "href",
                "textContent"
            ]
        }
    },
    "required": [
        "content"
    ]
}